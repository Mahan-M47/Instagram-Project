            <Font size="18.0" />
         </font></TextArea>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#1f93ff00" height="600.0" layoutX="650.0" layoutY="60.0" stroke="BLACK" strokeType="OUTSIDE" strokeWidth="2.0" width="600.0" />
      <ImageView fx:id="postImage" fitHeight="600.0" fitWidth="600.0" layoutX="650.0" layoutY="60.0" pickOnBounds="true" preserveRatio="true" />
