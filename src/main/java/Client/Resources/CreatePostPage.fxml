            <Font size="22.0" />
         </font></Button>
      <Button fx:id="createPostButton" layoutX="240.0" layoutY="510.0" mnemonicParsing="false" onAction="#createPostButtonClickHandler" prefHeight="75.0" prefWidth="150.0" text="Create Post">
